<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.calmlee.lesson04.dao.SellerDAO">

	<insert id="insertNewSeller" parameterType="map">
		INSERT INTO `seller`
		(
			`nickname`
			,`profileImageUrl`
			,`temperature`
			,`createdAt`
			,`updatedAt`		
		)
		VALUES
		(
			#{nickname}
			,#{profileImageUrl}
			,#{temperature}
			,now()
			,now()
		)	
	</insert>
	
	
	<select id="getLastSeller" resultType="com.calmlee.lesson04.model.Seller">
		
		SELECT
			`id`
			,`nickname`
			,`profileImageUrl`
			,`temperature`
			,`createdAt`
			,`updatedAt`		
		FROM
			`seller`
		ORDER BY `id` DESC
		LIMIT 1;
		
	</select>


	<select id="getSellerById" parameterType="int" resultType="com.calmlee.lesson04.model.Seller">
		
		SELECT
			`id`
			,`nickname`
			,`profileImageUrl`
			,`temperature`
			,`createdAt`
			,`updatedAt`		
		FROM
			`seller`
		WHERE
			`id` = #{id}
		
	</select>
	
</mapper>